<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:padding="10dp"
    android:orientation="vertical"
	android:background="#FFFFFF">    
	<ImageView
	    android:id="@+id/qboniconbtn"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/qboniconbtn_big"
	    />
	<TextView
        android:id="@+id/dialog_my_qbon_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="@string/my_qbon_btn"
        android:layout_marginBottom="45dp"
        android:textSize="26sp" />
   <ImageView
	    android:id="@+id/qrcodebtn"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/qrcodebtn"
	    />
    <TextView
        android:id="@+id/dialog_qrcode_scan_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="@string/qrcode_scan_btn"
        android:textSize="26sp" />
</LinearLayout>